<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:nom="urn:import:cimav.client.view.nomina"
>
    <ui:style src="nominaUI.css"/>
    <b:Container>
        <b:Row>
            <b:Column size="6">
                <nom:NominaPercepcionesUI ui:field="nominaPercepcionesUI"></nom:NominaPercepcionesUI>
            </b:Column>
            <b:Column size="6">
                <nom:NominaDeduccionesUI ui:field="nominaDeduccionesUI"></nom:NominaDeduccionesUI> 
            </b:Column> 
        </b:Row>
        <b:Row>
            <b:Column size="4"  offset="8">
                <g:HTMLPanel addStyleNames="{style.totales-panel}">
                    <table style = "width: 100%;">
                        <tr>
                            <td style="text-align: right;">
                                <g:Label ui:field="totalLabel" text="Totales" addStyleNames="{style.total-label}"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right;">
                                <b:Button type="SUCCESS" text="Calcular"/>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </b:Column>
        </b:Row>
    </b:Container>            
</ui:UiBinder>