<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:nom="urn:import:cimav.client.view.nomina"
             xmlns:b3="urn:import:org.gwtbootstrap3.client.ui"
             
>
    <ui:style src="nominaUI.css"/>
    <g:VerticalPanel addStyleNames='{style.nomina-contenedor}'>
        <g:HorizontalPanel addStyleNames='{style.movimientos-contenedor}'>
            <!-- ******* Percepciones ******* -->
            <b3:Panel addStyleNames='{style.conceptos-panel}'>
                <b3:PanelHeader>
                    <b3:Heading size="H3" text="Percepciones"/>
                </b3:PanelHeader>
                <b3:PanelBody addStyleNames='{style.conceptos-panel-body}'>
                    <b3:NavTabs ui:field="navTabsPercep" >
                        <b3:TabListItem active="true" ui:field="tabPercepConceptos" dataTarget="#tabPercepConceptosId" text="Conceptos"/>
                        <b3:TabListItem ui:field="tabPercepPorSaldo" dataTarget="#tabPercepPorSaldoId" text="Por Saldo"/>
                        <b3:TabListItem ui:field="tabPercepPorPago" dataTarget="#tabPercepPorPeriodoId" text="Por Periodo"/>
                    </b3:NavTabs>
                    <b3:TabContent ui:field="tabPanelConceptos" addStyleNames='{style.tab-panel}'>
                        <b3:TabPane active="true"  b3:id="tabPercepConceptosId"  addStyleNames='{style.tab-panel-conceptos}'>
                            <nom:NominaMovimientosUI ui:field="nominaPercepcionesUI" />
                        </b3:TabPane>
                        <b3:TabPane b3:id="tabPercepPorSaldoId" addStyleNames='{style.tab-panel-conceptos}'>
                            <nom:NominaSaldoUI ui:field="nominaPercepcionesSaldoUI" idTipoConcepto="P" idTipoMovimiento="S" />
                        </b3:TabPane>
                        <b3:TabPane b3:id="tabPercepPorPeriodoId">
                        </b3:TabPane>
                    </b3:TabContent>
                </b3:PanelBody>
            </b3:Panel>
            <!-- ******* Deducciones ******* -->
            <b3:Panel addStyleNames='{style.conceptos-panel}'>
                <b3:PanelHeader>
                    <b3:Heading size="H3" text="Deducciones"/>
                </b3:PanelHeader>
                <b3:PanelBody addStyleNames='{style.conceptos-panel-body}'>
                    <b3:NavTabs ui:field="navTabsDeduc" >
                        <b3:TabListItem ui:field="tabDeducConceptos" active="true" dataTarget="#tabDeducConceptosId" text="Conceptos"/>
                        <b3:TabListItem ui:field="tabDeducPorSaldo" dataTarget="#tabDeducPorSaldoId" text="Por Saldo"/>
                        <b3:TabListItem ui:field="tabDeducPorPago" dataTarget="#tabDeducPorPeriodoId" text="Por Periodo"/>
                    </b3:NavTabs>
                    <b3:TabContent addStyleNames='{style.tab-panel}'>
                        <b3:TabPane active="true"  b3:id="tabDeducConceptosId"  addStyleNames='{style.tab-panel-conceptos}'>
                            <nom:NominaMovimientosUI ui:field="nominaDeduccionesUI" />
                        </b3:TabPane>
                        <b3:TabPane b3:id="tabDeducPorSaldoId" addStyleNames='{style.tab-panel-conceptos}'>
                            <nom:NominaSaldoUI ui:field="nominaDeduccionesSaldoUI" idTipoConcepto="D" idTipoMovimiento="S" />
                        </b3:TabPane>
                        <b3:TabPane b3:id="tabDeducPorPeriodoId">
                        </b3:TabPane>
                    </b3:TabContent>
                </b3:PanelBody>
            </b3:Panel>
        </g:HorizontalPanel>
            <!-- ******* Totales ******* -->
        <g:HorizontalPanel addStyleNames='{style.movimientos-totales}'>
            <g:HTMLPanel addStyleNames="{style.totales-panel}">
                <table style = "width: 100%;">
                    <tr>
                        <td style="text-align: right;">
                            <g:Label ui:field="totalLabel" text="Totales" addStyleNames="{style.total-label}"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">
                            <b:Button type="SUCCESS" text="Calcular"/>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:HorizontalPanel>
    </g:VerticalPanel>
